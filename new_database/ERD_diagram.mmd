graph TD
    %% ==================== ENTITIES ====================
    USERS[USERS]:::entity
    COMPANIES[COMPANIES]:::entity
    JOBS[JOBS]:::entity
    APPLICATIONS[APPLICATIONS]:::entity
    SKILLS[SKILLS]:::entity

    %% ==================== USERS ATTRIBUTES ====================
    U_ID([user_id]):::key
    U_EMAIL([email]):::attr
    U_PASS([password_hash]):::attr
    U_NAME([full_name]):::attr
    U_PHONE([phone]):::attr
    U_ROLE([role]):::attr
    U_STATUS([status]):::attr
    U_CV([cv_url]):::attr
    U_SKILLS([skills]):::attr
    U_CREATED([created_at]):::attr
    
    U_ID -.-> USERS
    U_EMAIL -.-> USERS
    U_PASS -.-> USERS
    U_NAME -.-> USERS
    U_PHONE -.-> USERS
    U_ROLE -.-> USERS
    U_STATUS -.-> USERS
    U_CV -.-> USERS
    U_SKILLS -.-> USERS
    U_CREATED -.-> USERS

    %% ==================== COMPANIES ATTRIBUTES ====================
    C_ID([company_id]):::key
    C_NAME([company_name]):::attr
    C_DESC([description]):::attr
    C_WEB([website]):::attr
    C_LOGO([logo_url]):::attr
    C_ADDR([address]):::attr
    C_STATUS([status]):::attr
    C_CREATED([created_at]):::attr
    
    C_ID -.-> COMPANIES
    C_NAME -.-> COMPANIES
    C_DESC -.-> COMPANIES
    C_WEB -.-> COMPANIES
    C_LOGO -.-> COMPANIES
    C_ADDR -.-> COMPANIES
    C_STATUS -.-> COMPANIES
    C_CREATED -.-> COMPANIES

    %% ==================== JOBS ATTRIBUTES ====================
    J_ID([job_id]):::key
    J_TITLE([title]):::attr
    J_DESC([description]):::attr
    J_REQ([requirements]):::attr
    J_SAL_MIN([salary_min]):::attr
    J_SAL_MAX([salary_max]):::attr
    J_LOC([location]):::attr
    J_TYPE([job_type]):::attr
    J_STATUS([status]):::attr
    J_EXP([expiry_date]):::attr
    J_CREATED([created_at]):::attr
    
    J_ID -.-> JOBS
    J_TITLE -.-> JOBS
    J_DESC -.-> JOBS
    J_REQ -.-> JOBS
    J_SAL_MIN -.-> JOBS
    J_SAL_MAX -.-> JOBS
    J_LOC -.-> JOBS
    J_TYPE -.-> JOBS
    J_STATUS -.-> JOBS
    J_EXP -.-> JOBS
    J_CREATED -.-> JOBS

    %% ==================== APPLICATIONS ATTRIBUTES ====================
    A_ID([application_id]):::key
    A_CV([cv_url]):::attr
    A_COVER([cover_letter]):::attr
    A_STATUS([status]):::attr
    A_APPLIED([applied_at]):::attr
    
    A_ID -.-> APPLICATIONS
    A_CV -.-> APPLICATIONS
    A_COVER -.-> APPLICATIONS
    A_STATUS -.-> APPLICATIONS
    A_APPLIED -.-> APPLICATIONS

    %% ==================== SKILLS ATTRIBUTES ====================
    S_ID([skill_id]):::key
    S_NAME([skill_name]):::attr
    S_CAT([category]):::attr
    S_CREATED([created_at]):::attr
    
    S_ID -.-> SKILLS
    S_NAME -.-> SKILLS
    S_CAT -.-> SKILLS
    S_CREATED -.-> SKILLS

    %% ==================== RELATIONSHIPS ====================
    R_CREATES{{creates}}:::relationship
    R_POSTS{{posts}}:::relationship
    R_MANAGES{{manages}}:::relationship
    R_RECEIVES{{receives}}:::relationship
    R_SUBMITS{{submits}}:::relationship
    R_REQUIRES{{requires}}:::relationship
    R_APPROVES{{approves}}:::relationship
    R_REVIEWS{{reviews}}:::relationship

    %% Recruiter creates Companies (1:N)
    USERS -->|1| R_CREATES
    R_CREATES -->|N| COMPANIES

    %% Companies posts Jobs (1:N)
    COMPANIES -->|1| R_POSTS
    R_POSTS -->|N| JOBS

    %% Recruiter manages Jobs (1:N)
    USERS -->|1| R_MANAGES
    R_MANAGES -->|N| JOBS

    %% Jobs receives Applications (1:N)
    JOBS -->|1| R_RECEIVES
    R_RECEIVES -->|N| APPLICATIONS

    %% Candidate submits Applications (1:N)
    USERS -->|1| R_SUBMITS
    R_SUBMITS -->|N| APPLICATIONS

    %% Jobs requires Skills (M:N)
    JOBS -->|M| R_REQUIRES
    R_REQUIRES -->|N| SKILLS

    %% Admin approves Jobs (1:N)
    USERS -->|1| R_APPROVES
    R_APPROVES -->|N| JOBS

    %% Recruiter reviews Applications (1:N)
    USERS -->|1| R_REVIEWS
    R_REVIEWS -->|N| APPLICATIONS

    %% ==================== STYLING ====================
    classDef entity fill:#4A90E2,stroke:#2E5C8A,stroke-width:3px,color:#fff,font-weight:bold
    classDef attr fill:#F5F5DC,stroke:#8B8970,stroke-width:2px
    classDef key fill:#FFB6C1,stroke:#C71585,stroke-width:3px,font-weight:bold
    classDef relationship fill:#FFE4B5,stroke:#DAA520,stroke-width:2px,font-weight:bold
